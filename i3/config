font xft:Deja Vu Sans 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
#/exec
# start a terminal
bindsym $mod+Return exec i3-one-tmux
bindsym Control+Mod1+t exec urxvt

